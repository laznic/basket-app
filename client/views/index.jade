doctype html
html(lang="en", ng-app='basket')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE-edge')
    meta(name='viewport' content='width=device-width, initial-scale=1, user-scalable=no')
    title Basket - the superior grocery list application
    link(rel='stylesheet' href='public/css/font-awesome.min.css' media='screen')
    link(rel='stylesheet' href='public/css/styles.css' media='screen')
  body
    header.header
      .header-logo
        span Basdasd
      .header-button-wrapper
        a.btn.header-button(ng-if="frontPage" ng-controller="listController" ng-click="addNewList()") I need a new list!
        a.btn.header-button(ng-if="!frontPage" ng-controller="singleItemController" ng-click="goBack()") All done
      .header-menu-button
        a.btn.btn-menu(ng-click='toggleMenu()')
          i.fa.fa-bars.fa-2x

    .sidebar(ng-class='{"sidebar-toggled": menutoggled}')
      .profile
        .profile-image(ng-style='{"background-color": currentUser.color}')
          i.fa.fa-user
        .profile-name
          | John Doe

      .sidebar-navigation
        .sidebar-navigation-item(ng-click='openModal(1)')
          .sidebar-navigation-item-icon.light-blue-block
            i.fa.fa-share
          .sidebar-navigation-item-text
            | Share list

        .sidebar-navigation-item(ng-click='openModal(2)')
          .sidebar-navigation-item-icon.light-green-block
            i.fa.fa-envelope
          .sidebar-navigation-item-text
            | Email list

        .sidebar-navigation-item(ng-click='openModal(3)')
          .sidebar-navigation-item-icon.orange-block
            i.fa.fa-cog
          .sidebar-navigation-item-text
            | Settings

    modal-window(type='modal' ng-if='modal')

    .container(ng-view)

    script(type='text/javascript' src='public/media/lodash.js')
    script(type='text/javascript' src='public/js/bundle.js')
