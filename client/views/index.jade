doctype html
html(lang="en", ng-app='basket')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE-edge')
    meta(name='viewport' content='width=device-width, initial-scale=1, user-scalable=no')
    title Vikings of Code - project template
    link(rel='stylesheet' href='css/font-awesome.min.css' media='screen')
    link(rel='stylesheet' href='css/styles.css' media='screen')
  body
    header.header
      .header-logo
        span B

    .sidebar
      .profile
        .profile-image(style="background-color: {{currentUser.color}}")
          i.fa.fa-user
        .profile-name
          | John Doe

      .sidebar-navigation
        .sidebar-navigation-item
          .sidebar-navigation-item-icon.light-blue-block
            i.fa.fa-share
          .sidebar-navigation-item-text
            | Share list

        .sidebar-navigation-item
          .sidebar-navigation-item-icon.light-green-block
            i.fa.fa-envelope
          .sidebar-navigation-item-text
            | Email list

        .sidebar-navigation-item
          .sidebar-navigation-item-icon.orange-block
            i.fa.fa-cog
          .sidebar-navigation-item-text
            | Settings

    .container(ng-view)

    script(type='text/javascript' src='media/lodash.js')
    script(type='text/javascript' src='js/bundle.js')
